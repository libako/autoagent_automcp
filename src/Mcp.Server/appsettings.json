{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Mcp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "BundleLoader": {
    "BundlesPath": "../../bundles",
    "AutoDiscoveryPaths": [
      "./bundles",
      "../../bundles", 
      "%USERPROFILE%/.mcp/bundles",
      "%PROGRAMDATA%/MCP/bundles",
      "/usr/local/share/mcp/bundles",
      "/opt/mcp/bundles"
    ],
    "EnableHotReload": true,
    "ReloadDelayMs": 1000
  },
  "Discovery": {
    "ServiceName": "MCP AutoServer",
    "Port": 8970,
    "ProtocolVersion": "1.1",
    "Capabilities": ["tools", "resources", "events"],
    "AuthMethods": ["oidc", "apikey", "mtls"],
    "EnableMdns": true
  },
  "PolicyEngine": {
    "DefaultPolicyPath": "policies",
    "AllowByDefault": true
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8970"
      }
    }
  }
}
