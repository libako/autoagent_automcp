{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "template": {
      "type": "string",
      "description": "Nombre de la plantilla de meme a usar (opcional, se elige aleatoriamente si no se especifica)",
      "enum": ["drake", "distracted-boyfriend", "two-buttons", "change-my-mind", "surprised-pikachu", "random"]
    },
    "topText": {
      "type": "string",
      "description": "Texto superior del meme",
      "maxLength": 100
    },
    "bottomText": {
      "type": "string",
      "description": "Texto inferior del meme",
      "maxLength": 100
    },
    "style": {
      "type": "string",
      "description": "Estilo del texto",
      "enum": ["classic", "impact", "comic", "random"],
      "default": "classic"
    }
  },
  "required": ["topText"],
  "additionalProperties": false
}
